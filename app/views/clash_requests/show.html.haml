%h1 Enrolment request ##{@request.enrolment_request_id} #{@request.inactive ? '(inactive)' : ''}

.row
    .col-md-4
        %h3 Student's ID
        = @request.studentId

        %h3 Date submitted
        = @request.date_submitted

        %h3 Faculty
        = @request.faculty

        %h3 Comments
        = @request.comments
    %br
    = link_to 'Edit', edit_clash_request_path(@request), class: 'btn btn-primary'
    - unless @request.inactive
        = link_to 'Make inactive', clash_request_path(@request), method: :delete, class: 'btn btn-primary'
    = link_to 'Back', clash_requests_path, class: 'btn btn-default'
