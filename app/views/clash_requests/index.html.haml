%h1 Clash Requests

%div{class:"navbar red"}
    %ul.nav.navbar-nav
        %li
            %a{"aria-controls":"messages", "aria-expanded": "false", "data-toggle":"collapse", href: "#messages"} Active
        %li
            %a{"aria-controls": "messages", "aria-expanded": "false", "data-toggle":"collapse", href: "#messages"} Inactive
    = link_to 'Create' , new_clash_request_path, class: 'btn btn-primary pull-right red'

%table.table.table-hover#clash-clash_requests
    %thead
        %tr
            %th Enrolment Requests ID
            %th Student ID
            %th Date Submitted
            %th Faculty
            %th Comments
            %th
    %tbody
        - @clash_requests.each do |clash_request|
            %tr
                %td= clash_request.enrolment_request_id
                %td= clash_request.student_id
                %td= clash_request.date_submitted
                %td= clash_request.faculty
                %td= clash_request.comments
                %td= link_to 'View', clash_request_path(clash_request), class: 'btn btn-default'
